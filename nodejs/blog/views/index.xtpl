                  <td>{{this.id}}</td>
                  <td>{{this.user_id}}</td>
                  <td>{{this.title}}</td>
                  <td>{{this.created}}</td>
                  <td><button 
                  data-userid="{{this.user_id}}"
                  data-slug="{{this.slug}}"
                   id="edit" 
                   type="button" class="btn btn-primary" data-toggle="modal" data-target=".bs-example-modal-lg">编辑</button></td>
                  <td><button
                   id="delete"
                   data-id="{{this.id}}" class="btn btn-danger">删除</button></td>
               </tr>
            {{/each}}
            </tbody>
         </table>
