<script>
   var $table = $('#mydata')
   var $tbody = $('#tbody')
  
  // 删除操作
  $('#delete').on('click',function(result){
     if(!confirm('是否确认删除')) return 
     var id = $(this).attr('data-id')
     $.post('/admin/post/'+id,function(result){
       if(result.err_msg=='ok'){ alert('删除成功')}
     })
  })

  // 给搜索框注册change事件 
   $('#search').on('input',function(){
      var $this = $(this)
      if($this.val().trim()==''){return}
      $.get('/admin/index/search/'+$this.val() , function(data){
         console.log(data);
         render(data,1)
      })
   })

   // 当点击按钮时，去获取相应博客的详细数据
   $tbody.on('click','#edit',function(){
    console.log(111);
    var $this = $(this)
    var user_id = $this.attr('data-userid')
    var slug = $this.attr('data-slug')
    console.log(222);
    $.get('/'+ user_id+'/'+slug ,function(data){
        $('#content').val(data.content)
        $('#title').val(data.title)
        $('#id').val(data.id)
     })
   })

   // 点击保存按钮保存数据
   $('#save').on('click',function(){
        var content = $('#content').val()
       var  title =  $('#title').val()
        var id = $('#id').val()
      $.post('/admin/index/'+ id,{content:content,title:title},function(result){
        if(result.err_msg=='ok'){
          alert('保存成功')
        }else if(result.err_msg == 'err'){
          alert('保存失败')
        }
      })
   })
   
   // 上一页
   $('#pre').on('click' ,function(){
       var nowpage = $table.attr('data-page')-0
       nowpage<=1? '' : getPages(nowpage-1)
       
   })

   // 下一页
   $('#next').on('click' ,function(){
       var nowpage = $table.attr('data-page') -0
       var count = $table.attr('data-count') -0
       nowpage>= count ?'':getPages(nowpage + 1)
       // 要判断当前页是否是最大页
       // getPages( +1)
   })


   // 获取指定的页
   function getPages(nowPage){
    $.get('/admin/index/'+ nowPage , function(posts){
         
         if(posts.err_msg == 'err'){
           return alert('没有数据')
         }
        render(posts,nowPage)
      })
   }

// 渲染数据到html中
   function render(posts,nowPage){
    var str = '' 
         for (var i = 0; i < posts.length; i++) {
           var item = posts[i]
           str += '<tr>\
<td>'+ item.id +'</td>\
<td>'+ item.user_id +'</td>\
\
<td>'+ item.title +'</td>\
<td>'+ item.created+'</td>\
<td><button data-userid="'+ item.user_id +'"\
  data-slug="'+ item.slug +'"\
 id="edit" class="btn btn-primary">编辑</button></td>\
<td><button id="delete" class="btn btn-danger">删除</button></td>\
</tr>'
         }

   $tbody.html(str)
   $table.attr('data-page',nowPage)
   }
</script>